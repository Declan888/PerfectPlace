                                    }
                                    if (@ViewBag.topCountryOfBirth.Equals("China"))
                                    {
                                        <option selected="selected">China</option>
                                    }
                                    else
                                    {
                                        <option>China</option>
                                    }
                                    if (@ViewBag.topCountryOfBirth.Equals("India"))
                                    {
                                        <option selected="selected">India</option>
                                    }
                                    else
                                    {
