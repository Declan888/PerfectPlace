<div class="banner-content">
<div class="display-table pull_left">
<div class="display-table-cell">
<div class="tab-content">
@{
    var selectedTab = "";
    var selectedBox = "";
    if (@ViewBag.Current == "Home")
    {
        selectedTab = "active";
        selectedBox = "tab-pane fade in active banner-form";
    }
    else
    {
        selectedTab = @ViewBag.SearchResultPage == "SearchByPreference" ? "active" : "";
        selectedBox = @ViewBag.SearchResultPage == "SearchByPreference" ? "tab-pane fade in active banner-form" : "tab-pane fade banner-form";
    }

}
        <ul class="nav nav-tabs">
            <li class="@selectedTab"><a data-toggle="tab" href="#preference">Preference</a></li>
            <li class="@(ViewBag.SearchResultPage == "SearchByLifeStyle" ? "active" : "")"><a data-toggle="tab" href="#suburbChange">Life Style</a></li>
            <li class="@(ViewBag.SearchResultPage == "SearchBySuburb" ? "active" : "")"><a data-toggle="tab" href="#suburb">Suburb</a></li>

