                    <input type="submit" name="suburbChange" id="cityChangeBtn" value="I Want to Live Near by The City" class="button search_price lemon mb-21" style="width: 100%" onclick="location.href = '@Url.Action("Index", "Search")'" />

                </form>
            }
            <div style="text-align: center; width: 85%; margin-top: 5px; margin-bottom: 15px">
                @*<input type="submit" style="width: 85%" name="quiz" value="QUIZ" class="button search_price lemon mb-21" onclick="location.href = '@Url.Action("Quiz", "Search")'" />*@
                <a id="quiz" href="@Url.Action("Quiz", "Search")">Not sure your life style? Take a quiz</a>
            </div>
        </div>

        <div id="suburb" class="@(ViewBag.SearchResultPage == "SearchBySuburb" ? "tab-pane fade in active banner-form" : "tab-pane fade banner-form")">
            <div class="section-title mb-45 mt-45">
                <h2 class="uppercase text-white">
                    Search By <span>SUBURB</span>
                </h2>
            </div>
            @using (Html.BeginForm("Index", "Search", FormMethod.Post))
            {
                <form action="#" class="col-10">


                    <div class="form-box mb-40 pl-15 pr-15" style="width: 100%">
                        <input id="inputSuburb" class="mb-20" style="color: cadetblue; background-color: white" type="text" name="inputSuburb" placeholder="Search by suburb name or postcode">
                    </div>

                    <div class="form-box pl-15 pr-15 large" style="padding-left: 0px">
                        @*<button id="suburbSearchBtn" name="search_by_suburb" type="submit" class="button search_price lemon mt-55 mb-21" onclick="location.href = '@Url.Action("SearchBySuburb", "Search")'"><span><span>SEARCH SUBURB</span></span></button>*@
                        <input type="submit" name="searchBySuburbBtn" value="SEARCH SUBURB" class="button search_price lemon mb-21" style="font-weight: bold; font-size: 16px" onclick="location.href = '@Url.Action("Index", "Search")'" />
                    </div>
                </form>
            }
        </div>
        <div id="menu3" class="tab-pane fade">
