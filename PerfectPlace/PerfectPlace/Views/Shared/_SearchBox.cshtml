                <h2 class="uppercase text-white">
                    FIND YOUR <span>DREAM SUBURB</span>
                </h2>
            </div>
            @using (Html.BeginForm("Index", "Search", FormMethod.Post))
            {
                <form action="#" class="col-10">
                    <input type="submit" name="suburbChange" id="seaChangeBtn" value="I Want to Live Near by The Sea" class="button search_price lemon mb-21" style="width: 100%" onclick="location.href = '@Url.Action("Index", "Search")'" />
