            <p>Eaque ipsa quae ab illo inventore veritatis et quasi architecto beatae vitae dicta sunt explicabo.</p>
        </div>
    </div>
</div>
</div>
</div>

<script>
    $(function () {
        KeywordPredict();
    });

    var availableTags = [];

    function KeywordPredict() {
        $.ajax({
            url: "Home/KeywordPredict",
            success: function (data) {
                $.each(data,
                    function (k, v) {
                        availableTags.push(v.suburb);
                    });
                $.each(data,
                    function (k, v) {
                        availableTags.push(v.post_code);
                    });

                $("#inputSuburb").autocomplete({
                    source: availableTags
                });
            },
            error: function (e) {
                //alert("Error: " + e);
            }
        });
    }
</script>

